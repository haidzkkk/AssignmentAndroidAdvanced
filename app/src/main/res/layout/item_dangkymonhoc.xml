<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:id="@+id/item_dangky_cardview"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/neural"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/item_dangky_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lập trình android"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/item_dangky_tv_code_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ca2- 256 | thi ngày 22/10/2022"
                android:textSize="17dp"/>
            
            <Button
                android:id="@+id/item_dangky_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng ký khóa học"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/btn_dangky_in"/>

            
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>